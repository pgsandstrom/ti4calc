{
  "name": "ti4-calc",
  "version": "0.1.0",
  "private": false,
  "scripts": {
    "build": "next build",
    "dev": "next dev",
    "dev-database": "docker compose -f docker-compose-dev.yml up -d",
    "dev-database-build": "docker compose -f docker-compose-dev.yml build",
    "docker-build": "docker compose build --no-cache",
    "docker-up": "docker compose up",
    "format": "prettier --write \"{,!(.next|dist|node_modules)/**/}!(package-lock).{json,md,js,jsx,ts,tsx,css,scss}\"",
    "lint": "eslint --max-warnings 0 \"**/*.{ts,tsx,js}\"",
    "pre-commit": "lint-staged",
    "pre-push": "npm run lint && cross-env CI=true npm run test && npm run typecheck",
    "start": "next start -p 3000",
    "test": "jest",
    "typecheck": "tsc --noEmit",
    "prepare": "husky"
  },
  "dependencies": {
    "@types/lodash": "4.17.7",
    "@types/pg": "8.11.6",
    "@types/react": "18.3.3",
    "cross-env": "7.0.3",
    "husky": "9.1.3",
    "lodash": "4.17.21",
    "next": "14.2.5",
    "pg": "8.12.0",
    "react": "18.3.1",
    "react-dom": "18.3.1",
    "typescript": "5.6.2"
  },
  "devDependencies": {
    "@eslint/compat": "1.1.1",
    "@eslint/js": "9.11.1",
    "@next/eslint-plugin-next": "14.2.14",
    "@types/eslint__js": "8.42.3",
    "@types/jest": "29.5.12",
    "eslint": "9.11.1",
    "eslint-config-prettier": "9.1.0",
    "eslint-plugin-no-only-tests": "3.3.0",
    "eslint-plugin-react": "7.37.1",
    "eslint-plugin-react-hooks": "5.1.0",
    "jest": "29.7.0",
    "jest-environment-jsdom": "29.7.0",
    "lint-staged": "15.2.7",
    "prettier": "3.3.3",
    "sass": "1.77.8",
    "typescript-eslint": "8.19.1"
  },
  "lint-staged": {
    "*.{js,json,md,css,scss,html}": [
      "prettier --write"
    ],
    "*.{ts,tsx}": [
      "eslint --fix --max-warnings 0",
      "prettier --write"
    ]
  }
}
