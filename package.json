{
  "name": "ti4-calc",
  "version": "0.1.0",
  "private": false,
  "scripts": {
    "build": "next build",
    "dev": "next dev --turbopack",
    "dev-database": "docker compose -f docker-compose-dev.yml up -d",
    "dev-database-build": "docker compose -f docker-compose-dev.yml build",
    "docker-build": "docker compose build --no-cache",
    "docker-up": "docker compose up",
    "format": "prettier --write \"{,!(.next|dist|node_modules)/**/}!(package-lock).{json,md,js,jsx,ts,tsx,css,scss}\"",
    "lint": "eslint --max-warnings 0 \"**/*.{ts,tsx,js}\"",
    "pre-commit": "lint-staged",
    "pre-push": "npm run lint && cross-env CI=true npm run test && npm run typecheck",
    "start": "next start -p 3000",
    "test": "jest",
    "typecheck": "tsc --noEmit",
    "prepare": "husky"
  },
  "dependencies": {
    "@types/lodash": "4.17.14",
    "@types/pg": "8.11.11",
    "@types/react": "19.0.8",
    "cross-env": "7.0.3",
    "husky": "9.1.7",
    "lodash": "4.17.21",
    "next": "15.5.6",
    "pg": "8.13.1",
    "react": "19.0.0",
    "react-dom": "19.0.0",
    "typescript": "5.7.3"
  },
  "devDependencies": {
    "@eslint/compat": "1.2.5",
    "@eslint/js": "9.19.0",
    "@next/eslint-plugin-next": "15.1.6",
    "@types/jest": "29.5.14",
    "eslint": "9.38.0",
    "eslint-plugin-no-only-tests": "3.3.0",
    "eslint-plugin-react": "7.37.5",
    "eslint-plugin-react-hooks": "7.0.1",
    "eslint-plugin-simple-import-sort": "12.1.1",
    "jest": "29.7.0",
    "jest-environment-jsdom": "29.7.0",
    "lint-staged": "16.2.6",
    "prettier": "3.6.2",
    "sass": "1.93.3",
    "typescript-eslint": "8.46.2"
  },
  "lint-staged": {
    "*.{js,json,md,css,scss,html}": [
      "prettier --write"
    ],
    "*.{ts,tsx}": [
      "eslint --fix --max-warnings 0 --no-warn-ignored",
      "prettier --write"
    ]
  }
}
